@inject LocalizationService Localization

<Collapsable Title="Skills">
    <div class="pa-2">
        @if (Localization.SkillsData != null)
            {
                @foreach(var skill in Localization.SkillsData)
                {
                    <MudGrid>
                        <MudItem xs="5">
                            <MudText>@skill.Name</MudText>
                        </MudItem>
                        <MudItem xs="7">
                            <MudProgressLinear 
                                Value="@skill.Level" 
                                Color="Color.Primary" 
                                Max="10" 
                                Min="1"
                                Rounded="true"
                                Style="height: 20px"
                            />
                        </MudItem>
                    </MudGrid>
                }
            }
    </div>
</Collapsable>