@inject LocalizationService Localization

@foreach (var exp in Localization.SelectedLanguageData.Experiences)
{
    <Collapsable Title="@exp.Title">
        <MudText Class="pa-2" Typo="Typo.body1">
            @exp.Description
        </MudText>
    </Collapsable>
}

@code {
    protected override async Task OnInitializedAsync()
    {
        Localization.LanguageChanged += async () =>
        {
            await InvokeAsync(StateHasChanged);
        };
    }
}